<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Ejercicio_TiendaVirtual</display-name>
  <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  		<servlet-name>ServletLogin</servlet-name>
  		<servlet-class>servlets.ServletLogin</servlet-class>
  </servlet>
   <servlet>
        <servlet-name>ServletRegistro</servlet-name>
        <servlet-class>servlets.ServletRegistro</servlet-class>
        <init-param>
            <param-name>maxRegistros</param-name>
            <param-value>4</param-value>
        </init-param>
   </servlet>
   <servlet>
  		<servlet-name>ServletListarPedidos</servlet-name>
  		<servlet-class>servlets.ServletListarPedidos</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>ServletLogin</servlet-name>
  		<url-pattern>/ServletLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  		<servlet-name>ServletRegistro</servlet-name>
  		<url-pattern>/ServletRegistro</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  		<servlet-name>ServletListarPedidos</servlet-name>
  		<url-pattern>/ServletListarPedidos</url-pattern>
  </servlet-mapping>
</web-app>